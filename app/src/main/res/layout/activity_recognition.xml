<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Recognition">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <TextureView
            android:id="@+id/texture_preview_recog"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.www24.facedetection.widget.FaceRectView
            android:id="@+id/face_rect_view_recog"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/hint_in_add_face_dat"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_person_recog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>